<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diary_page"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softpro.personaldiary.HomeActivity">

    <Button
        android:id="@+id/noteButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#ec7718"
        android:onClick="diary"
        android:text="My Note"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/diaryButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ec7718"
        android:onClick="history"
        android:text="MY DIARY"
        android:layout_below="@+id/noteButton"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic" />


    <Button
        android:id="@+id/detailsButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/diaryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ec7718"
        android:onClick="details"
        android:text="MY DETAILS"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/contactsButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/detailsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ec7718"
        android:onClick="contacts"
        android:text="MY CONTACTS"

        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/contactsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#ec7718"
        android:onClick="logOut"
        android:text="LOG OUT"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="italic" />

</RelativeLayout>
